@using Microsoft.AspNet.Identity;
@model IEnumerable<WEB_APP_PROJECT.Models.Order>

@{
    ViewData["Title"] = "Start Pages";
}

@{
    Layout = null;
}



<header>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WEB_APP_PROJECT.styles.css" asp-append-version="true" />

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 ">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Hiw Khao</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
               
                        <li class="nav-item">
                            <a class="nav-link" href="ChoosePage?FoodShopName=@ViewData["FoodShopName"]" onclick="location.reload()">ChoosePage</a>
                        </li>
                    <li class="nav-item">
                        <a asp-controller="Home"
                           asp-action="UpdateRider"
                           asp-route-count="minus"
                           asp-route-FoodShopName="@ViewData["FoodShopName"]"
                            class="nav-link text-dark"
                            >Order</a>
                     
                    </li>

                </ul>
            </div>
        </div>
    </nav>

</header>
<div class="w-100 d-flex flex-wrap justify-content-center" style="margin-top:40px;">
@foreach(Order tmp in Model)
{
    <div class="card mb-3 mx-3" style="width:16rem;">
        <div class="card-body">
                <h4 class="card-title"> ร้าน : @ViewData["FoodShopName"]</h4>
            <p class="card-text">
                    ลูกค้า : @tmp.userName<br>
                เบอร์ลูกค้า : @tmp.callUser<br>
                เมนู : @tmp.menu              <br>
                จำนวน : @tmp.amount<br>
            </p>
                <a asp-controller="Home"
                   asp-action="AcceptOrder"
                   asp-route-Orderid=@tmp.OrderId
                   asp-route-FoodShopName=@tmp.FoodShopName
                    class="btn btn-warning">เป็นผู้ฝาก</a>
         
        </div>
    </div>
}
</div>
