@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column" style="margin-right:50px;">
    <li class="nav-item" style="margin-bottom:7px; background-color:ghostwhite; border-radius:20px;"><a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" style="border-radius:20px;" id="profile" asp-page="./Index">Profile</a></li>
    <li class="nav-item" style="margin-bottom:7px; background-color:ghostwhite; border-radius:20px;"><a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" style="border-radius:20px;" id="email" asp-page="./Email">Email</a></li>
    <li class="nav-item" style="margin-bottom:7px; background-color:ghostwhite; border-radius:20px;"><a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" style="border-radius:20px;" id="change-password" asp-page="./ChangePassword">Password</a></li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item"><a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a></li>
    }

</ul>